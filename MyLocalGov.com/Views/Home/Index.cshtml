@{
	Layout = null;
	ViewData["Title"] = "Landing Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<title>My Local Gov.com - South African Municipal Services Portal</title>
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta name="description" content="Official municipal services portal for South African citizens. Report issues, request services, stay informed about local events, and track your service requests." />
	<link href="~/css/site-theme.css" rel="stylesheet" />
	<link href="~/css/landing-page.css" rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
	<main class="landing-page-container">
		<!-- Official Badge -->
		<div class="badge-container">
			<div class="official-badge fade-in">
				🇿🇦 Official Municipal Portal
			</div>
		</div>

		<!-- Logo and Title -->
		<header class="logo-container slide-up">
			<div class="logo">
				<div class="logo-icon">🏛️</div>
			</div>
			<div class="title">My Local Gov.com</div>
			<div class="subtitle">
				Your South African municipal services portal. Report issues, request services, and stay informed about local events and announcements.
			</div>
			<button id="enterButton" class="btn" aria-label="Access Municipal Services" role="button">
				Access Portal
				<span style="margin-left: 8px;" aria-hidden="true">→</span>
			</button>
		</header>

		<!-- Features Grid -->
		<section class="features-grid" aria-label="Portal Features">
			<div class="feature-card">
				<div class="feature-icon">�</div>
				<div class="feature-title">Report Issues</div>
				<div class="feature-description">Easily report municipal problems like potholes, water leaks, or power outages directly to your local municipality.</div>
			</div>
			<div class="feature-card">
				<div class="feature-icon">📝</div>
				<div class="feature-title">Request Services</div>
				<div class="feature-description">Submit requests for municipal services such as waste collection, permits, or general maintenance.</div>
			</div>
			<div class="feature-card">
				<div class="feature-icon">📅</div>
				<div class="feature-title">Local Events & Announcements</div>
				<div class="feature-description">Stay updated on community events, council meetings, and important municipal announcements.</div>
			</div>
			<div class="feature-card">
				<div class="feature-icon">📊</div>
				<div class="feature-title">Track Your Requests</div>
				<div class="feature-description">Monitor the progress of your submitted issues and service requests with status updates.</div>
			</div>
		</section>
	</main>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
	<script>
		document.addEventListener("DOMContentLoaded", function () {
			document.body.classList.add('page-loaded');
			const enterButton = document.getElementById("enterButton");

			// Add click animation to enter button
			enterButton.addEventListener("click", (e) => {
				// Add a ripple effect
				const ripple = document.createElement('span');
				const rect = enterButton.getBoundingClientRect();
				const size = Math.max(rect.width, rect.height);
				const x = e.clientX - rect.left - size / 2;
				const y = e.clientY - rect.top - size / 2;

				ripple.style.cssText = `
					position: absolute;
					width: ${size}px;
					height: ${size}px;
					left: ${x}px;
					top: ${y}px;
					background: rgba(255,255,255,0.3);
					border-radius: 50%;
					transform: scale(0);
					animation: ripple 0.6s linear;
					pointer-events: none;
				`;

				enterButton.style.position = 'relative';
				enterButton.style.overflow = 'hidden';
				enterButton.appendChild(ripple);

				setTimeout(() => {
					ripple.remove();
				}, 600);

				// Navigation to dashboard/main application
				// For now, just log - you can replace with actual navigation
				console.log('Accessing My Local Gov.com portal...');
				// Example: window.location.href = '/Dashboard';
			});

			// Add staggered animation to feature cards
			const featureCards = document.querySelectorAll('.feature-card');
			featureCards.forEach((card, index) => {
				setTimeout(() => {
					card.classList.add('slide-up');
				}, 200 * (index + 1));
			});
		});
	</script>
</body>
</html>
