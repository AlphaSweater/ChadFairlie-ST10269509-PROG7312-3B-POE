    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.body.classList.add('page-loaded');
            const enterButton = document.getElementById("enterButton");

            // Add click animation to enter button
            enterButton.addEventListener("click", (e) => {
                // Add a ripple effect
                const ripple = document.createElement('span');
                const rect = enterButton.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;

                ripple.style.cssText = `
                    position: absolute;
                    width: ${size}px;
                    height: ${size}px;
                    left: ${x}px;
                    top: ${y}px;
                    background: rgba(255,255,255,0.3);
                    border-radius: 50%;
                    transform: scale(0);
                    animation: ripple 0.6s linear;
                    pointer-events: none;
                `;

                enterButton.style.position = 'relative';
                enterButton.style.overflow = 'hidden';
                enterButton.appendChild(ripple);

                setTimeout(() => {
                    ripple.remove();
                }, 600);

                // Navigation to dashboard/main application
                console.log('Accessing My Local Gov.com portal...');
                window.location.href = '/Home/Dashboard';
            });

            // Add staggered animation to feature cards
            const featureCards = document.querySelectorAll('.feature-card');
            featureCards.forEach((card, index) => {
                setTimeout(() => {
                    card.classList.add('slide-up');
                }, 200 * (index + 1));
            });
        });
    </script>
